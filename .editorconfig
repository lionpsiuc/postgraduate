# This is the main EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

# C, C++, and CUDA files
[*.{c,cpp,cu,cuh,h,hpp}]
indent_size = 2
indent_style = space
tab_width = 2

# Python
[*.py]
indent_size = 4
indent_style = space
tab_width = 4

# Markdown and JSON
[*.{md,json}]
insert_final_newline = true
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab
