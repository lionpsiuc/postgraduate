# This file is the top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

# Bash files
[*.sh]
end_of_line = lf

# C, C++, and CUDA
[*.{c,cpp,cu,h,hpp}]
indent_size = 2

# JSON
[*.{json,json5,webmanifest}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
